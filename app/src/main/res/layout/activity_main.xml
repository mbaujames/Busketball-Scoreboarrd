        android:layout_marginTop="5dp"
        android:id="@+id/shareText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:textSize="13sp"
        android:text="Start a New "
        />

    <!--share -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/btns"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="2">
            <Button
                android:id="@+id/whatsapp"
                android:layout_width="0dp"
                android:onClick="setWhatsapp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_whatsapp_svgrepo_com"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/facebook"
                android:onClick="smsSend"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:drawableEnd= "@drawable/ic_sms_blue"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/gmail"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:onClick="gmailBtn"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_gmail_icon_seeklogo_com"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/last"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/startGame"
                android:onClick="StartGame"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="Start "

                />
            <Button
                android:id="@+id/endGame"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:onClick="onEndGame"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="FT "

                />
            <Button
                android:id="@+id/reset"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="reset"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="Reset"

                />

        </LinearLayout>

    </LinearLayout>





